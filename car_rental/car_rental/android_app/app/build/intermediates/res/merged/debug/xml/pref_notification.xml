<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <SwitchPreference
    android:defaultValue="true"
    android:key="@string/key_notifications_new_message"
    android:title="@string/pref_title_new_message_notifications"/>
  <RingtonePreference
    android:defaultValue="content://settings/system/notification_sound"
    android:dependency="@string/key_notifications_new_message"
    android:key="@string/key_notifications_new_message_ringtone"
    android:ringtoneType="notification"
    android:title="@string/pref_title_ringtone"/>
  <SwitchPreference
    android:defaultValue="true"
    android:dependency="@string/key_notifications_new_message"
    android:key="@string/key_notifications_new_message_vibrate"
    android:title="@string/pref_title_vibrate"/>
  <SwitchPreference
    android:defaultValue="true"
    android:key="@string/key_notifications_show_tips"
    android:title="@string/pref_title_show_tips"/>
</PreferenceScreen>
