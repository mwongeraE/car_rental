    <item name="colorPrimaryDark">@color/app_main_dark</item>
    <item name="colorAccent">@color/app_accent</item>
    <item name="colorControlNormal">@color/app_control</item>
    <item name="android:textColorSecondary">@color/label_text_dark</item>
    <item name="actionBarWidgetTheme">@style/Widget.ActionBar</item>
